<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mapresso.gallery" version="2.6.0" ios-CFBundleVersion="2.6.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GallerySolitaire</name>
    <description>
        Gallery Solitaire is a clever solitaire game for a short break with serious addiction potential. 
    </description>
    <author email="adi@mapresso.com" href="https://gallery.mapresso.com">
        Adrian Herzog
    </author>
    <content src="index.html" />
    <access origin="*" />
    
    <preference name="StatusBarStyle" value="lightcontent" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <allow-navigation href="about:*" />

    <allow-intent href="mailto:*" />

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <preference name="DisallowOverscroll" value="true"/>
    <preference name="FullScreen" value="false"/>



</widget>
